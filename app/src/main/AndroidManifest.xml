<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.maxpetroleum.tmapp">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/main_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/main_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.UpdateBalance"></activity>
        <activity android:name=".Activities.PoList" />
        <activity android:name=".Activities.AddDealer" />
        <activity android:name=".Activities.SODetails" />
        <activity android:name=".Activities.SoList" />
        <activity android:name=".Activities.AddSO" />
        <activity android:name=".Activities.RateUpdate" />
        <activity android:name=".Activities.PoDetail" />
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>